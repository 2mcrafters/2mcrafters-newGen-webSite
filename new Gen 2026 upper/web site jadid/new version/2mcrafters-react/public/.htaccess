<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow Next.js assets to be served directly
  RewriteCond %{REQUEST_URI} ^/_next/ [NC]
  RewriteRule .* - [L]

  # Serve existing files or directories as-is
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Fallback to the directory index so pretty URLs work
  RewriteRule ^(.+[^/])/?$ /$1/index.html [L]
</IfModule>
